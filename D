local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/DenDenZZZ/Kavo-UI-Library/main/Kavo.lua"))()
local AimbotModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Tiky"))()
local ESPModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Piky"))()
local FastModeModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Niki"))()
local AureKillModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Giki"))()

local currentTheme = {
    SchemeColor = Color3.fromRGB(0, 170, 255),  
    Background = Color3.fromRGB(15, 15, 25),      
    Header = Color3.fromRGB(0, 120, 215),    
    TextColor = Color3.fromRGB(230, 240, 255),     
    ElementColor = Color3.fromRGB(40, 40, 60)    
}

local toggleGui = Instance.new("ScreenGui")
toggleGui.Name = "ToggleGui"
toggleGui.Parent = game.CoreGui

local toggleButton = Instance.new("ImageButton")
toggleButton.Name = "SHV1"
toggleButton.Size = UDim2.new(0, 40, 0, 40)
toggleButton.Position = UDim2.new(0, 5, 0, 10)
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleButton.BackgroundTransparency = 0.2
toggleButton.BorderSizePixel = 0
toggleButton.ZIndex = 9999
toggleButton.Image = "rbxassetid://76926193047725"
toggleButton.Parent = toggleGui

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 8)
toggleCorner.Parent = toggleButton

local aimbotFOVEnabled = false
local aimbotNearestEnabled = false

local Window = Library.CreateLib("Sapi Hub V1", currentTheme)

local Tab = Window:NewTab("Aimbot")
local Section = Tab:NewSection("Aimbot Settings")

Section:NewToggle("Aimbot FOV", "Enable aimbot with FOV circle", function(state)
    aimbotFOVEnabled = state
    AimbotModule.setFOVCircleEnabled(state)
    if state then
        aimbotNearestEnabled = false
        AimbotModule.setNearestAimEnabled(false)
    end
    AimbotModule.setAimbotEnabled(state or aimbotNearestEnabled)
end)

Section:NewToggle("Aimbot Nearest", "Aim at nearest NPC", function(state)
    aimbotNearestEnabled = state
    AimbotModule.setNearestAimEnabled(state)
    if state then
        aimbotFOVEnabled = false
        AimbotModule.setFOVCircleEnabled(false)
    end
    AimbotModule.setAimbotEnabled(state or aimbotFOVEnabled)
end)

Section:NewToggle("Visibility Check", "Prevent aimbot through walls", function(state)
    AimbotModule.setVisibilityCheck(state)
end)

Section:NewDropdown("Aimbot Distance Limit", "Select max distance for aimbot", {"100", "300", "500"}, function(selected)
    local num = tonumber(selected)
    if num then
        AimbotModule.setDistanceLimit(num)
    end
end)

local Tab = Window:NewTab("ESP")
local Section = Tab:NewSection("ESP Categories")

Section:NewToggle("NPC / Players ESP", "Shows NPCs and Players", function(state)
    if state then
        ESPModule.startNPCs()
        ESPModule.startPlayers() 
    else
        ESPModule.stopNPCs()
        ESPModule.stopPlayers() 
    end
end)

Section:NewToggle("All Items ESP", "Shows items in RuntimeItems folder", function(state)
    if state then
        ESPModule.startRuntimeItems()
    else
        ESPModule.stopRuntimeItems()
    end
end)

local Tab = Window:NewTab("Performance")
local Section = Tab:NewSection("FPS Boost")

Section:NewToggle("Fast Mode | FPS Boost ", "Boost performance by lowering graphics", function(state)
    FastModeModule.toggle(state)
end)

Section:NewToggle("Aura Kill (Beta Version) | You Are Lazy Fr Play Legit", "Toggle the aura kill feature", function(state)
    AureKillModule.toggleAura(state)
end)

toggleButton.MouseButton1Click:Connect(function()
    Library:ToggleUI()
end)
