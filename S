local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/DenDenZZZ/Kavo-UI-Library/main/Kavo.lua"))()

local AimbotModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Aimbotmodule.lua"))()
local ESPModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Espmodule.lua"))()
local UtilsModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/Utilsmodule.lua"))()
local FastModeModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Habbie127/Aimbot-Module-/refs/heads/main/GraphicPotato.lua"))()

local currentTheme = {
    SchemeColor = Color3.fromRGB(0, 170, 255),  
    Background = Color3.fromRGB(15, 15, 25),      
    Header = Color3.fromRGB(0, 120, 215),    
    TextColor = Color3.fromRGB(230, 240, 255),     
    ElementColor = Color3.fromRGB(40, 40, 60)    
}

local toggleGui = Instance.new("ScreenGui")
toggleGui.Name = "ToggleGui"
toggleGui.Parent = game.CoreGui

local toggleButton = Instance.new("ImageButton") -- Changed from TextButton to ImageButton
toggleButton.Name = "SHV1"
toggleButton.Size = UDim2.new(0, 40, 0, 40)
toggleButton.Position = UDim2.new(0, 5, 0, 10)
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleButton.BackgroundTransparency = 0.2
toggleButton.BorderSizePixel = 0
toggleButton.ZIndex = 9999
toggleButton.Image = "rbxassetid://76926193047725" -- Set image ID here
toggleButton.Parent = toggleGui

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 8)
toggleCorner.Parent = toggleButton

local Window = Library.CreateLib("Sapi Hub V1", currentTheme)

local function updateTheme(newColor)
    currentTheme.SchemeColor = newColor
    local h, s, v = newColor:ToHSV()
    currentTheme.Header = Color3.fromHSV(h, s * 0.8, v * 0.3)
    currentTheme.ElementColor = Color3.fromHSV(h, s * 0.5, v * 0.1)
    
    Library:updateTheme(currentTheme)
end

local Tab = Window:NewTab("Aimbot")
local Section = Tab:NewSection("Aimbot Settings")

Section:NewToggle("Smooth Aim", "Toggle smooth camera movement", function(state)
AimbotModule.setSmooth(state)
end)

Section:NewToggle("Aimlock (FOV)", "Locks aim inside FOV Circle", function(state)
AimbotModule.toggleAimlock(state)
end)

Section:NewToggle("Nearest Aimbot", "Locks aim on closest enemies", function(state)
AimbotModule.toggleNearest(state)
end)

Section:NewToggle("FOV Circle Visible", "Show/Hide FOV Circle", function(state)
AimbotModule.toggleFOVCircle(state)
end)

Section:NewToggle("Visibility Check", "Only aim at visible targets", function(state)
AimbotModule.setVisibilityCheck(state)
end)

local Tab = Window:NewTab("ESP")
local Section = Tab:NewSection("ESP Settings")

Section:NewToggle("ESP Body", "ESP Highlight for enemies", function(state)
ESPModule.toggleESP(state)
end)

Section:NewToggle("ESP Distance", "Show distance text for enemies", function(state)
ESPModule.toggleDistance(state)
end)

Section:NewToggle("ESP Health", "Show health text for enemies", function(state)
ESPModule.toggleHealth(state)
end)

Section:NewToggle("ESP Name", "Show name text for enemies", function(state)
ESPModule.toggleName(state)
end)

local Tab = Window:NewTab("Performance")
local Section = Tab:NewSection("Fast Mode")

Section:NewToggle("Fast Mode", "Optimize graphics for mobile - Boost FPS", function(state)
    FastModeModule.toggle(state)
end)

Section:NewLabel("Fast Mode optimizes:")
Section:NewLabel(" Mobile-friendly settings")

local Tab = Window:NewTab("Theme Colour")
local Section = Tab:NewSection("Colour Change")

Section:NewLabel("Let Me Know Which Colour Theme Should Add TwT")
Section:NewButton("Blue Theme", "Apply blue color theme", function()
    updateTheme(Color3.fromRGB(0, 162, 255))
end)

Section:NewButton("Red Theme", "Apply red color theme", function()
    updateTheme(Color3.fromRGB(255, 59, 48))
end)

Section:NewButton("Green Theme", "Apply green color theme", function()
    updateTheme(Color3.fromRGB(48, 209, 88))
end)

Section:NewButton("Purple Theme", "Apply purple color theme", function()
    updateTheme(Color3.fromRGB(175, 82, 222))
end)

Section:NewButton("Orange Theme", "Apply orange color theme", function()
    updateTheme(Color3.fromRGB(255, 149, 0))
end)

Section:NewButton("Pink Theme", "Apply pink color theme", function()
    updateTheme(Color3.fromRGB(255, 105, 180))
end)

Section:NewButton("Yellow Theme", "Apply yellow color theme", function()
    updateTheme(Color3.fromRGB(255, 204, 0))
end)

Section:NewButton("Cyan Theme", "Apply cyan color theme", function()
    updateTheme(Color3.fromRGB(0, 255, 255))
end)

Section:NewButton("Dark Theme", "Apply dark gray theme", function()
    updateTheme(Color3.fromRGB(100, 100, 100))
end)

Section:NewButton("White Theme", "Apply white/gray theme", function()
    updateTheme(Color3.fromRGB(220, 220, 220))
end)

Section:NewButton("Teal Theme", "Apply teal color theme", function()
    updateTheme(Color3.fromRGB(64, 224, 208))
end)

Section:NewButton("Lime Theme", "Apply lime color theme", function()
    updateTheme(Color3.fromRGB(191, 255, 0))
end)

Section:NewButton("Indigo Theme", "Apply indigo color theme", function()
    updateTheme(Color3.fromRGB(75, 0, 130))
end)

Section:NewButton("Reset Theme", "Reset to default colors", function()
    updateTheme(Color3.fromRGB(0,255,255))
end)

toggleButton.MouseButton1Click:Connect(function()
    Library:ToggleUI()
end)
