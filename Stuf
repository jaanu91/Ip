local StuffsModule = {}

local PingsOrFpsEnabled = false

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FPSPingDisplay"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0, 150, 0, 30)
textLabel.Position = UDim2.new(0, 10, 0, 10)
textLabel.BackgroundTransparency = 0.5
textLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.TextScaled = true
textLabel.Text = "FPS: 0 / Ping: 0"
textLabel.Visible = false
textLabel.Parent = screenGui

-- Toggle function
function StuffsModule:SetBuddySwordX(state)
    PingsOrFpsEnabled = state
    textLabel.Visible = state
end

-- FPS calculation
local lastTime = tick()
local fps = 0

RunService.RenderStepped:Connect(function()
    if PingsOrFpsEnabled then
        local now = tick()
        fps = 1 / (now - lastTime)
        lastTime = now
        
        -- Get ping in ms
        local ping = math.floor(LocalPlayer:GetNetworkPing() * 1000)
        
        -- Show FPS and Ping without leading zeros
        textLabel.Text = "FPS: " .. math.floor(fps) .. " / Ping: " .. ping
    end
end)

return StuffsModule
